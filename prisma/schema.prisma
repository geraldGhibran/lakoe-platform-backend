generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  phone       Int
  password    String
  role        roleEnum    @default(SELLER)
  location_id Int
  location    Locations[] @relation(fields: [location_id], references: [id])
}

model Locations {
  id               Int     @id @default(autoincrement())
  name             String
  address          String
  postal_code      Int
  city_district    Int
  latitude         Int
  longitude        Int
  store_id
  user_id          Int
  user             User    @relation(fields: [user_id], references: [id])
  is_main_location Boolean
}

model Store {
  id          Int    @id @default(autoincrement())
  name        String
  slogan      String
  description String
}

enum roleEnum {
  ADMIN
  SELLER
}
